#= require Putio
#= require Location
#= require_self
#= require_tree ./App


@App =

  GIT_SHA: "<%= GIT_SHA %>"

  state: ->
    path:     Location.path
    params:   App.router.pageFor(Location.path, Location.params)
    loggedIn: !!App.session('put_io_access_token')



$ ->
  React.render(DOM.App(), document.body)

$(window).on 'unload', (event) ->
  document.body.innerHTML = ''
