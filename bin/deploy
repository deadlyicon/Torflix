#!/usr/bin/env ruby


SHA = `git rev-parse HEAD`.chomp

puts "deploying:"
system %(git log -1 #{SHA} --decorate)

REMOTE_SCRIPT = <<-SH
  git fetch &&
  git reset --hard #{SHA} &&
  bundle install &&
  bundle exec rake -v assets:clobber assets:precompile db:migrate
SH

system %(echo #{REMOTE_SCRIPT.inspect} | ssh -A rails@torflix.jaredatron.com)
system %(echo "service unicorn restart" | ssh root@torflix.jaredatron.com)
